.page__sort__image image {
      width: 96rpx;
      height: 96rpx;
      transform: rotate(-45deg);
      -webkit-transform: rotate(-45deg);
      border-bottom-left-radius: 100rpx;
      border-bottom-right-radius: 100rpx;
}

.page__bd ul.page__bd__sorts li.page__bd__sort p {
      font-size: 24rpx;
